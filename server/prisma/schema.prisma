// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id        Int       @id
  name      String?
  desc      String?
  profiles  Profile[]
}

model Profile {
  id        Int       @default(autoincrement()) @id
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bio       String?
  user      User      @relation(fields: [userId], references: [id])
  list      Game[]  
  userId    Int     
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  name      String?
  password  String?
  photoURL  String?
  socketId  String?
  profile   Profile?
}